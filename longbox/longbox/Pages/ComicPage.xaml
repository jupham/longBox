<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="longbox.Pages.ComicPage"
             Title="Comic Detail">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Image Aspect="AspectFit">
                    <Image.Source>
                        <UriImageSource Uri="{Binding Comic.CoverURL}" 
                            CacheValidity="3" 
                            CachingEnabled="true"/>
                    </Image.Source>
                </Image>
                <Entry Text="{Binding Comic.Title}" />
                <Entry Text="{Binding Comic.Publisher}" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>