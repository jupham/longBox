<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="longbox.Pages.ComicGridPage"
             Title="Comics">
    <ContentPage.Content>
        <ListView ItemsSource="{Binding ComicList}" SelectedItem="{Binding SelectedComic}" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ImageCell Text="{Binding Title}" Detail="{Binding Publisher}">
                        <ImageCell.ImageSource>
                            <UriImageSource Uri="{Binding CoverURL}" 
                            CacheValidity="3" 
                            CachingEnabled="true"/>
                        </ImageCell.ImageSource>
                    </ImageCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>